<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/imageView_splash"
        android:layout_width="@dimen/_133sdp"
        android:layout_height="@dimen/_136sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_150sdp"
        app:srcCompat="@drawable/logo_icon_png"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="315dp" />

    <TextView
        android:id="@+id/welcome_message_tv"
        android:layout_width="@dimen/_225sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/imageView_splash"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:text="@string/splash_welcom"
        android:textColor="@color/white"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold" />

    <ProgressBar
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_below="@id/welcome_message_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_80sdp"
        android:progressBackgroundTint="@color/white"
        android:progressDrawable="@color/white"
        android:progressTint="@color/white"
        android:secondaryProgressTint="@color/white" />
</RelativeLayout>